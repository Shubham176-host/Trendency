<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/button"
    tools:context=".SignupActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColor"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_centerHorizontal="true"
        android:text="SIGNUP"
        android:textSize="50dp"/>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@android:dimen/app_icon_size"
        android:paddingTop="90dp"
        app:srcCompat="@drawable/logopng" />

    <EditText
        android:id="@+id/User_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/imageView4"
        android:hint="User Name"
        android:inputType="text"
        android:maxLength="20"
        android:textColor="@color/textColor"
        android:maxLines="1"
        android:padding="20dp"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/signup_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/User_name"
        android:textColor="@color/textColor"
        android:padding="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="Phone Number"
        android:inputType="number"
        android:maxLines="1"
        android:maxLength="10"
        android:textSize="15dp"/>

    <EditText
        android:id="@+id/signup_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup_phone_number"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:maxLength="12"
        android:maxLines="1"
        android:padding="20dp"
        android:textColor="@color/textColor"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/confirm_signup_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup_password"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:maxLength="12"
        android:maxLines="1"
        android:padding="20dp"
        android:textColor="@color/textColor"
        android:textSize="15dp" />
    <Button
        android:id="@+id/main_signup2_btn"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_below="@+id/confirm_signup_password"
        android:layout_marginTop="23dp"
        android:background="@drawable/buttons"
        android:layout_centerHorizontal="true"
        android:text="Signup"
        android:textAllCaps="false"
        android:textColor="@color/colorButtonText"
        android:textSize="18sp" />

</RelativeLayout>