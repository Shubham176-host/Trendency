<?xml version="1.0" encoding="utf-8"?>
<com.rey.material.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User.ProductDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <ImageView
        android:id="@+id/product_image_details"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_below="@+id/product_name_details"
        android:layout_marginStart="20dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="20dp" />

    <TextView
        android:id="@+id/product_name_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Product Name"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/defaultColor"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/product_discription_details"
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_height="wrap_content"
        android:text="Product Discription"
        android:layout_below="@+id/product_image_details"
        android:layout_marginTop="10dp"
        android:textColor="@color/defaultColor"
        android:textSize="16sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:visibility="invisible"
                android:id="@+id/size_details"
                android:layout_margin="5dp"
                android:layout_below="@+id/product_discription_details">

                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="S"
                    android:textSize="20sp"
                    android:id="@+id/size_small"
                    android:background="#AFAFAF"
                    android:layout_margin="5dp"/>

                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="M"
                    android:textSize="20sp"
                    android:id="@+id/size_medium"
                    android:background="#AFAFAF"
                    android:layout_margin="5dp"/>

                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="L"
                    android:textSize="20sp"
                    android:id="@+id/size_large"
                    android:background="#AFAFAF"
                    android:layout_margin="5dp"/>

                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="XL"
                    android:textSize="20sp"
                    android:id="@+id/size_xlarge"
                    android:background="#AFAFAF"
                    android:layout_margin="5dp"/>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:id="@+id/free_size_details"
                android:layout_margin="5dp"
                android:text="Free size"
                android:textColor="@color/textColor"
                android:textSize="20sp"
                android:visibility="invisible"
                android:layout_below="@+id/product_discription_details">

            </TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:visibility="invisible"
                android:id="@+id/number_size_details"
                android:layout_margin="5dp"
                android:layout_below="@+id/product_discription_details">

                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="6"
                    android:textSize="20sp"
                    android:id="@+id/size_6"
                    android:background="#AFAFAF"
                    android:layout_margin="5dp"/>

                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="7"
                    android:textSize="20sp"
                    android:id="@+id/size_7"
                    android:background="#AFAFAF"
                    android:layout_margin="5dp"/>

                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="8"
                    android:textSize="20sp"
                    android:id="@+id/size_8"
                    android:background="#AFAFAF"
                    android:layout_margin="5dp"/>

                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="9"
                    android:textSize="20sp"
                    android:id="@+id/size_9"
                    android:background="#AFAFAF"
                    android:layout_margin="5dp"/>

                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="10"
                    android:textSize="20sp"
                    android:id="@+id/size_10"
                    android:background="#AFAFAF"
                    android:layout_margin="5dp"/>

                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="11"
                    android:textSize="20sp"
                    android:id="@+id/size_11"
                    android:background="#AFAFAF"
                    android:layout_margin="5dp"/>

                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="12"
                    android:textSize="20sp"
                    android:id="@+id/size_12"
                    android:background="#AFAFAF"
                    android:layout_margin="5dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Size"
                android:textSize="25sp"
                android:visibility="invisible"
                android:layout_margin="10dp"
                android:textColor="@color/textColor"
                android:layout_alignParentEnd="true"
                android:id="@+id/set_size_details"
                android:layout_below="@+id/product_discription_details"/>

    <TextView
        android:id="@+id/product_price_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Product price"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:layout_below="@+id/set_size_details"
        android:textColor="@color/defaultColor"
        android:textSize="20sp"/>

    <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
        android:layout_height="30dp"
        android:layout_width="80dp"
        android:id="@+id/number_btn"
        android:backgroundTint="#000000"
        android:layout_below="@+id/product_price_details"
        app:textSize="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp">
    </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

    <Button
        android:id="@+id/buy_now_direct_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/addtocart_btn"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:text="Buy Now"
        android:textColor="@color/colorButtonText"
        android:textSize="20sp"
        android:background="@drawable/buttons"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/addtocart_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/number_btn"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:text="Add To Cart"
        android:background="@drawable/buttons"
        android:textSize="20sp"
        android:textColor="@color/colorButtonText"
        android:layout_marginTop="5dp"
        />
</RelativeLayout>
    </ScrollView>

</com.rey.material.widget.RelativeLayout>